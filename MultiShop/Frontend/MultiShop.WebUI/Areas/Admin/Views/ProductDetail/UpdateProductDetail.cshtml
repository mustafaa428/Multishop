@model UpdateProductDetailDto
@{
    ViewData["Title"] = "UpdateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün açıklama ve bilgi güncelleme sayfası</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="ProductDetailId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Ürün bilgisi</label>
                        <textarea class="form-control" asp-for="ProductInfo" rows="5"></textarea>
                        <br />
                        <label>Ürün açıklaması</label>
                        <textarea class="form-control" asp-for="ProductDescription" rows="5"></textarea>
                        <br />
                        <button class="btn btn-success">Ürün açıklama ve bilgisini Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

