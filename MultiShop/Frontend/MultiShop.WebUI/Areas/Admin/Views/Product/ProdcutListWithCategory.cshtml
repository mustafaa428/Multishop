@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "ProdcutListWithCategory";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <div class="bs-example" data-example-id="bordered-table">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Ürün adı</th>
                                <th>Ürün Fiyatı</th>
                                <th>Ürün kategori</th>
                                <th>Sil</th>
                                <th>Güncelle</th>
                                <th>Ürün görselleri</th>
                                <th>Açıklama ve bilgisi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.ProductName</td>
                                    <td>@item.ProducPrice</td>
                                    <td>@item.Category?.CategoryName</td>
                                    <td><a href="/Admin/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">sil</a></td>
                                    <td><a href="/Admin/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
                                    <td><a href="/Admin/ProductImage/ProductImageDetail/@item.ProductId" class="btn btn-warning">Ürün görselleri</a></td>
                                    <td><a href="/Admin/ProductDetail/UpdateProductDetail/@item.ProductId" class="btn btn-info">Açıklama ve bilgi</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Admin/Product/CreateProduct" class="btn btn-primary">Yeni Ürün girişi</a>
                </div>
            </div>
        </div>

    </div>
</section>


