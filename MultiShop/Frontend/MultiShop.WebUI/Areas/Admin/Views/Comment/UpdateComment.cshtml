@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">

        <div class="col-md-12">
            <div class="chart-box">
                <h4>Kategori güncelleme sayfası</h4>
                <div class="bs-example" data-example-id="bordered-table">
                    <form method="post">
                        <input type="hidden" asp-for="UserCommentId" />
                        <input type="hidden" asp-for="ProductId" />
                        <label>Kullanıcı adı soyadı</label>
                        <input type="text" class="form-control" asp-for="Fullname" />
                        <br />
                        <label>Kullanıcı fotoğrafı</label>
                        <input type="text" class="form-control" asp-for="ImageUrl" />
                        <br />
                        <label>Email</label>
                        <input type="text" class="form-control" asp-for="Email" />
                        <br />
                        <label>değerlendirme</label>
                        <input type="number" class="form-control" asp-for="Raiting" />
                        <br />
                        <label>Yorum tarihi</label>
                        <input type="date" class="form-control" asp-for="CreatedDate" />
                        <br />
                        <label>Yorum</label>
                        <textarea class ="form-control" asp-for="CommentDetail" rows="3"></textarea>
                        <br />
                        <button class="btn btn-succes">Yorumu Güncelle</button>
                    </form>
                </div>
            </div>
        </div>

    </div>
</section>

