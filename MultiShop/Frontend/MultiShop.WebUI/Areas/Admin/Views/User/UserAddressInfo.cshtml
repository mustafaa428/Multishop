@model GetCargoCustomerByIdDto
@{
    ViewData["Title"] = "UserAddressInfo";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

<style>
    body {
        background: linear-gradient(to right, #ece9e6, #ffffff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .glass-envelope {
        width: 100%;
        max-width: 600px;
        margin: 100px auto;
        position: relative;
        border-radius: 20px;
        overflow: hidden;
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.4);
        box-shadow: 0 8px 32px rgba(31, 38, 135, 0.2);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

        .glass-envelope:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 35px rgba(31, 38, 135, 0.3);
        }

    .flap-glass {
        position: absolute;
        top: -80px;
        left: 0;
        width: 100%;
        height: 100px;
        background: linear-gradient(120deg, #6f42c1, #b34bff);
        clip-path: polygon(50% 0%, 100% 100%, 0% 100%);
        z-index: 1;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
    }

    .card-content {
        position: relative;
        z-index: 2;
        padding: 50px 40px 30px;
        background: rgba(255, 255, 255, 0.65);
        backdrop-filter: blur(12px);
        border-radius: 20px;
    }

        .card-content h2 {
            font-size: 24px;
            margin-bottom: 25px;
            color: #6f42c1;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .card-content p {
            margin: 12px 0;
            font-size: 16px;
            color: #333;
            line-height: 1.6;
        }

        .card-content strong {
            color: #222;
        }

        .card-content i {
            color: #6f42c1;
            font-size: 20px;
        }

</style>


<section class="content container-fluid mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="glass-envelope">
                <div class="flap-glass"></div>
                <div class="card-content">
                    <h2><i class="fas fa-address-card"></i> Kullanıcı Bilgileri</h2>
                    <p><strong>Ad Soyad:</strong> @Model.name @Model.surname</p>
                    <p><strong>Telefon:</strong> @Model.phone</p>
                    <p><strong>Email:</strong> @Model.email</p>
                    <p><strong>Şehir:</strong> @Model.city</p>
                    <p><strong>Bölge:</strong> @Model.district</p>
                    <p><strong>Adres:</strong> @Model.address</p>
                </div>
            </div>
        </div>
    </div>
</section>

