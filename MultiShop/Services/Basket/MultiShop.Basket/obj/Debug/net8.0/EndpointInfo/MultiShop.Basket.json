{
  "openapi": "3.0.1",
  "info": {
    "title": "MultiShop.Basket",
    "version": "1.0"
  },
  "paths": {
    "/api/Baskets": {
      "get": {
        "tags": [
          "Baskets"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "post": {
        "tags": [
          "Baskets"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/BasketTotalDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/BasketTotalDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/BasketTotalDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      },
      "delete": {
        "tags": [
          "Baskets"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "BasketItemDto": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "nullable": true
          },
          "productName": {
            "type": "string",
            "nullable": true
          },
          "productImageUrl": {
            "type": "string",
            "nullable": true
          },
          "quantity": {
            "type": "integer",
            "format": "int32"
          },
          "price": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      },
      "BasketTotalDto": {
        "required": [
          "discountCode",
          "userId"
        ],
        "type": "object",
        "properties": {
          "userId": {
            "minLength": 1,
            "type": "string"
          },
          "discountCode": {
            "minLength": 1,
            "type": "string"
          },
          "discountRate": {
            "type": "integer",
            "format": "int32"
          },
          "basketItems": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/BasketItemDto"
            },
            "nullable": true
          },
          "totalPrice": {
            "type": "number",
            "format": "double",
            "readOnly": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}